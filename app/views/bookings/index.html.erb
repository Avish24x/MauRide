<h1>Bookings</h1>

<div>
<% @bookings.each do |booking| %>
  <p><strong>Driver:</strong> <%= booking.user.first_name %> - <%= booking.user.last_name %></p>
  <p><strong>Ride:</strong> from <%= booking.ride.start_location %> to <%= booking.ride.end_location %></p>
  <p><strong>Seats:</strong> <%= booking.booked_seats %></p>
  <p><strong>Start time:</strong> <%= booking.ride.start_time %></p>
  <p><strong>Price:</strong> <%= booking.ride.price %> Rs</p>

  <%= link_to "Cancel Booking", booking_path(booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<% end %>
</div>

<%= link_to "back to rides", rides_path %>
