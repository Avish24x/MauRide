<h1>New Booking</h1>

<%= simple_form_for @booking do |form| %>
  <%= form.error_notification %>

  <div class="form-inputs">
    <%= form.input :user_id, collection: User.all, label_method: :first_name, value_method: :id, include_blank: false %>
    <%= form.input :ride_id, collection: Ride.all, label_method: :ride_details, value_method: :id, include_blank: false %>
    <%= form.input :ride.seats %>
  </div>

  <div class="form-actions">
    <%= form.button :submit, "Create Booking" %>
  </div>
<% end %>

<%= link_to "Back", bookings_path %>
