<h1>Booking Details</h1>

<p><strong>User:</strong> <%= @booking.user.first_name %></p>
<p><strong>Ride:</strong> <%= @booking.ride.ride_details %></p>
<p><strong>Seats:</strong> <%= @booking.seats %></p>

<p>

  <%= link_to "Edit", edit_booking_path(@booking) %> |
  <%= link_to "Delete", booking_path(@booking), method: :delete, data: { confirm: "Are you sure you want to delete this booking?" } %> |
  <%= link_to "Back", bookings_path %>
  <div class="btn btn-success">
        <%= link_to booking_path, method: :post %>

        <% end %>
      </div>
</p>
