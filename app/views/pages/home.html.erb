<div class="home-upperbody">
  <div class="home-header">
    <h1>Mau<span>Ride</span></h1>
    <h2>Get Started!</h2>
  </div>

  <div class="container-home-location">
    <%= form_with url: ride_search_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type an address"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
