<div class="home-upperbody">
  <div class="home-header">
    <%= image_tag "mauride_logo.png" %>
    <div class="home-header-text">
      <h1>Mau<span>Ride</span></h1>
      <h2>Get Started!</h2>
    </div>
  </div>

  <div class="container-home-location">
    <%= form_with url: ride_search_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type your destination"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-flat" %>
    <% end %>
  </div>
</div>
