<div class="home-upperbody">
  <div class="home-header">
    <h1>Mau<span>Ride</span></h1>
    <h2>Get Started!</h2>
  </div>

  <div class="container-home-location">
     <%= form_with url: '/', method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "From where ?", collection: @VILLE_NAME
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-flat" %>
    <% end %>
  </div>
</div>

<div>
  <p><%= link_to "Rides index", rides_path %></p>
</div>

<div class="notification" >
  <div style="width: 100%; height: 300px;"
    data-controller="maphome"
    data-maphome-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>


