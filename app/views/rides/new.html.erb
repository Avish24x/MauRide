<%= simple_form_for @ride do |f| %>
  <%= f.input :start_location %>
  <%= f.input :end_location %>
  <%= f.input :ride_details %>
  <%= f.input :start_time %>
  <%= f.input :end_time %>
  <%= f.input :price %>
  <%= f.input :seats %>
  <%= f.association :vehicule, collection: Vehicule.where(user: current_user), label_method: :model %>
  <%= f.submit %>
<% end %>
