<%= link_to "back", rides_path %>

<div>
  <h1><%= @ride.start_location %> to <%= @ride.end_location %></h1>
  <p><strong>Start time : </strong><%= @ride.start_time %></p>
  <p><strong>End time : </strong><%= @ride.end_time %></p>
  <p><strong>Price : </strong><%= @ride.price %></p>
  <p><strong>Details : </strong><%= @ride.ride_details %></p>
  <%# seats available = rides.seats - booking.booked_seats %>

  <%= simple_form_for [@ride, @booking] do |form| %>
    <%= form.error_notification %>

    <div class="form-inputs">
      <%= form.input :booked_seats, collection: (1..@ride.seats) %>
    </div>

    <div class="form-actions">
      <%= form.button :submit, "Create Booking" %>
    </div>
  <% end %>

  <%= link_to "Delete (a afficher que pour le driver qui a créé le ride)",
  ride_path(@ride),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
</div>

<div>
  <h2>Add Review : a afficher uniquement quand date ride dépassée</h2>

  <%= simple_form_for [@ride, @review] do |f| %>
    <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", input_html: {data: {controller: "star-rating"}} %>
    <%= f.input :comment %>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
