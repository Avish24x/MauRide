<div class="section">
  <%= link_to root_path,
    data: {turbo_method: :get} do %>
      <i class="fa-solid fa-arrow-left fa-xl" style="color: #000000;"></i>
    <% end %><hr>
  <h2>Profile</h2>
</div>

<div class="notification">
  <div class="avatar-large">
    <%= cl_image_tag @user.photo.key, width: 56, height: 56, crop: :thumb, gravity: :face, radius: :max %>
  </div>

  <div class="notification-content">
    <p><strong><%= @user.first_name %> <%= @user.last_name %></strong></p>
  </div>

 <% if current_user == @user %>
    <div class="notification-actions">
      <%= link_to edit_user_registration_path, data: {turbo_method: :get} do %>
        <p>Edit <i class="fas fa-pencil-alt"></i></p>
      <% end %>

      <%= link_to root_path,
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
        <p>Delete <i class="far fa-trash-alt"></i></a></p>
      <% end %>
    </div>
  <% end %>

</div>

<div>
<h2>My Bookings</h2>
  <div class="notification" >
    <div class="notification-content">
      <h3>Planning</h3>
      <h3>Previews rides</h3>
    </div>
  </div>
</div>

<div>
  <h2>Reviews</h2>
  <div class="notification" >
    <div class="notification-content">
      <% @user.reviews.each do |review| %>
        <p><strong>Rating:</strong> <%= review.rating %></p>
        <p><strong>Comment:</strong> <%= review.comment %></p>
        <p><strong><%= time_ago_in_words(review.timestamp) %></strong></p>

        <%= link_to "Delete review", ride_review_path(@ride, review),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%><hr>
      <% end %>
    </div>
  </div>
</div>
