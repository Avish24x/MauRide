<%# changer le path, aller sur le profil du DRIVER %>
<%= link_to root_path,
          data: {turbo_method: :get} do %>
            <i class="fa-solid fa-arrow-left fa-xl" style="color: #000000;"></i>
          <% end %><hr>

<h1>Your vehicles</h1>
<div>
  <% @vehicules.each do |vehicule| %>
    <div class="notification" >
      <div class="notification-content">
        <p><%= link_to "Model : #{vehicule.model}", vehicule_path(vehicule) %></p>
        <p>Registration details : <%= vehicule.registration_detail %></p>
      </div>

      <%# on affiche icone poubelle  %>
      <div class="notification-actions">
        <%= link_to vehicule_path(vehicule),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
          <i class="far fa-trash-alt"></i>
        <% end %><hr>
      </div>
    </div>
  <% end %>
</div>

<p><%= link_to "add a new vehicule", new_vehicule_path %></p>
