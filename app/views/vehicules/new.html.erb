<div class="section">
  <%= link_to new_ride_path,
    data: {turbo_method: :get} do %>
      <i class="fa-solid fa-arrow-left fa-xl" style="color: #000000;"></i>
    <% end %><hr>
  <h2>Create my vehicle</h2>
</div>

<div class="notification" >
  <div class="notification-content">
    <%= simple_form_for(@vehicule) do |f| %>
      <%= f.input :model %>
      <%= f.input :registration_detail, placeholder: "ABC-123-DE" %>
      <%# quand on submit, on retpurne vers "add a new ride" %>
      <%= f.submit class: "btn btn-flat" %>
    <% end %>
  </div>
</div>

<h1>Your vehicles</h1>
<div>
  <% @vehicules.each do |vehicule| %>
    <div class="notification" >
      <div class="notification-content">
        <p>Model : <%= vehicule.model %></p>
        <p>Registration details : <%= vehicule.registration_detail %></p>
      </div>

      <%# on affiche icone poubelle  %>
      <div class="notification-actions">
        <%= link_to vehicule_path(vehicule),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
          <i class="far fa-trash-alt"></i>
        <% end %><hr>
      </div>
    </div>
  <% end %>
</div>
